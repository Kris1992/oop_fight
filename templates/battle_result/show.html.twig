{% extends 'content_base.html.twig' %}

{% block title %}Battles{% endblock %}

{% block content_class %}{{ parent() }} container-border-green p-2{% endblock %} 
{% block content_body %}
    <div class="col-sm-12">
        <h2 class="text-green text-center">Battle result</h2>
        <div class="row my-4">
            {% if battleResult.winner %}
                <div class="col-sm-6">
                    <div class="card">
                        <img class="card-img-top battle-result-img" src="{{ asset('img/winner.png') }}" alt="Winner">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>Name:</strong>
                                <span>{{ battleResult.winner.name }}</span>
                            </li>
                            <li class="list-group-item">
                                <strong>Type:</strong>
                                <span>{{ battleResult.winner.type }}</span>
                            </li>
                            <li class="list-group-item">
                                <strong>Initial health:</strong>
                                <span>{{ battleResult.winner.health }}</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <img class="card-img-top battle-result-img" src="{{ asset('img/loser.jpg') }}" alt="Loser">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>Name:</strong>
                                <span>{{ battleResult.loser.name }}</span>
                            </li>
                            <li class="list-group-item">
                                <strong>Type:</strong>
                                <span>{{ battleResult.loser.type }}</span>
                            </li>
                            <li class="list-group-item">
                                <strong>Initial health:</strong>
                                <span>{{ battleResult.loser.health }}</span>
                            </li>
                        </ul>
                    </div>
                </div>
            {% else %}
                <div class="col-sm-6">
                    <div class="card">
                        <img class="card-img-top battle-result-img" src="{{ asset('img/draw.jpg') }}" alt="Winner">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>Name:</strong>
                                <span>{{ battleResult.firstParticipant.name }}</span>
                            </li>
                            <li class="list-group-item">
                                <strong>Type:</strong>
                                <span>{{ battleResult.firstParticipant.type }}</span>
                            </li>
                            <li class="list-group-item">
                                <strong>Initial health:</strong>
                                <span>{{ battleResult.firstParticipant.health }}</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <img class="card-img-top battle-result-img" src="{{ asset('img/draw.jpg') }}" alt="Winner">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>Name:</strong>
                                <span>{{ battleResult.secondParticipant.name }}</span>
                            </li>
                            <li class="list-group-item">
                                <strong>Type:</strong>
                                <span>{{ battleResult.secondParticipant.type }}</span>
                            </li>
                            <li class="list-group-item">
                                <strong>Initial health:</strong>
                                <span>{{ battleResult.secondParticipant.health }}</span>
                            </li>
                        </ul>
                    </div>
                </div>
            {% endif %}
            <div class="col-sm-12 my-3 text-center">
                <span><strong>{{ battleResult }}</strong></span>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% endblock %}
